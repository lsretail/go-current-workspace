{
    "name": "go-current-workspace",
    "displayName": "LS Go Current - Workspace",
    "description": "LS Go Current - Workspace brings you the power of Go Current to your Visual Studio Code workspace.",
    "version": "0.1.1+developer",
    "publisher": "lsretail",
    "repository": "https://bitbucket.lsretail.com/projects/GOC/repos/workspace",
    "author": {
        "name": "Team Thunderbolt"
    },
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:gocurrent.json",
        "onCommand:go-current.activate"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "go-current.deploy",
                "title": "Deploy packages",
                "category": "Go Current"
            },
            {
                "command": "go-current.remove",
                "title": "Remove packages",
                "category": "Go Current"
            },
            {
                "command": "go-current.update",
                "title": "Updates available",
                "category": "Go Current"
            },
            {
                "command": "go-current.checkForUpdates",
                "title": "Check for Updates",
                "category": "Go Current"
            },
            {
                "command": "go-current.experimental",
                "title": "Experimental",
                "category": "Go Current"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "go-current.deploy",
                    "when": "go-current.deploy.active"
                },
                {
                    "command": "go-current.remove",
                    "when": "go-current.deploy.active"
                },
                {
                    "command": "go-current.update",
                    "when": "go-current.deploy.active && go-current.deploy.updatesAvailable"
                },
                {
                    "command": "go-current.checkForUpdates",
                    "when": "go-current.deploy.active && go-current.debug"
                },
                {
                    "command": "go-current.experimental",
                    "when": "go-current.deploy.active && go-current.debug"
                }
            ]
        },
        "jsonValidation": [
            {
                "fileMatch": "gocurrent.json",
                "url": "./syntaxes/projectFileSyntax.json"
            },
            {
                "fileMatch": ".gocurrent/data.json",
                "url": "./syntaxes/deploymentSyntax.json"
            },
            {
                "fileMatch": ".gocurrent/arguments.json",
                "url": "./syntaxes/parameterSyntax.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.44",
        "@types/node": "^7.0.46",
        "mocha": "^3.5.3",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "node-powershell": "^3.3.1",
        "then-fs": "2.0",
        "uuid": "3.1.0"
    }
}
