{
    "name": "go-current-workspace",
    "displayName": "Go Current Workspace",
    "description": "Go Current Workspace brings you the power of Go Current to your Visual Studio Code workspace.",
    "version": "0.5.0-developer",
    "publisher": "lsretail",
    "repository": {
        "type": "git",
        "url": "https://bitbucket.lsretail.com/projects/GOC/repos/workspace"
    },
    "author": {
        "name": "Team Thunderbolt"
    },
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.48.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:.gocurrent/gocurrent.json",
        "workspaceContains:gocurrent.json",
        "onCommand:go-current.newProject",
        "onCommand:go-current.openWizard"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "go-current.newProject",
                "title": "Go!",
                "category": "Go Current"
            },
            {
                "command": "go-current.deploy",
                "title": "Install Packages",
                "category": "Go Current"
            },
            {
                "command": "go-current.remove",
                "title": "Remove Packages",
                "category": "Go Current"
            },
            {
                "command": "go-current.update",
                "title": "Updates Available!",
                "category": "Go Current"
            },
            {
                "command": "go-current.checkForUpdates",
                "title": "Check for Updates",
                "category": "Go Current"
            },
            {
                "command": "go-current.experimental",
                "title": "Experimental, run at your own risk!",
                "category": "Go Current"
            },
            {
                "command": "go-current.openWizard",
                "title": "Open App",
                "category": "Go Current"
            },
            {
                "command": "go-current.addInstanceToWorkspace",
                "title": "Add Instance to Your Workspace",
                "category": "Go Current"
            },
            {
                "command": "go-current.al.repopulateLaunchJson",
                "title": "Re-populate launch.json",
                "category": "Go Current AL"
            },
            {
                "command": "go-current.al.unpublishApp",
                "title": "Unpublish App",
                "category": "Go Current AL"
            },
            {
                "command": "go-current.al.upgradeData",
                "title": "Start App Data Upgrade",
                "category": "Go Current AL"
            },
            {
                "command": "go-current.al.downloadDependencies",
                "title": "Download Dependencies (.alpackages + .netpackages)",
                "category": "Go Current AL"
            },
            {
                "command": "go-current.al.compileAndPackage",
                "title": "Compile and Create Package",
                "category": "Go Current AL"
            },
            {
                "command": "go-current.al.newPackage",
                "title": "Create Package",
                "category": "Go Current AL"
            },
            {
                "command": "go-current.newPackage",
                "title": "Create Package",
                "category": "Go Current"
            },
            {
                "command": "go-current.al.addNewDependencies",
                "title": "Go Current AL: Import dependencies from app.json",
                "category": "Go Current AL"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "go-current.newProject",
                    "when": "!go-current.deploy.active && workspaceFolderCount || go-current.deploy.hasInactiveWorkspaces"
                },
                {
                    "command": "go-current.deploy",
                    "when": "go-current.deploy.active"
                },
                {
                    "command": "go-current.remove",
                    "when": "go-current.deploy.active"
                },
                {
                    "command": "go-current.update",
                    "when": "go-current.deploy.active && go-current.deploy.updatesAvailable"
                },
                {
                    "command": "go-current.checkForUpdates",
                    "when": "go-current.deploy.active"
                },
                {
                    "command": "go-current.experimental",
                    "when": "go-current.experimental.active && go-current.debug"
                },
                {
                    "command": "go-current.openWizard",
                    "when": "go-current.active"
                },
                {
                    "command": "go-current.addInstanceToWorkspace",
                    "when": "go-current.deploy.active"
                },
                {
                    "command": "go-current.al.repopulateLaunchJson",
                    "when": "go-current.al.active"
                },
                {
                    "command": "go-current.al.unpublishApp",
                    "when": "go-current.al.active"
                },
                {
                    "command": "go-current.al.upgradeData",
                    "when": "go-current.al.active"
                },
                {
                    "command": "go-current.al.downloadDependencies",
                    "when": "go-current.al.active"
                },
                {
                    "command": "go-current.al.compileAndPackage",
                    "when": "go-current.al.active"
                },
                {
                    "command": "go-current.al.newPackage",
                    "when": "go-current.al.active"
                },
                {
                    "command": "go-current.newPackage",
                    "when": "go-current.deploy.active && !go-current.al.active"
                },
                {
                    "command": "go-current.al.addNewDependencies",
                    "when": "false"
                }
            ],
            "explorer/context": [
                {
                    "command": "go-current.al.addNewDependencies",
                    "when": "go-current.al.active && resourceFilename == gocurrent.json",
                    "group": "Go Current"
                }
            ],
            "editor/context": [
                {
                    "command": "go-current.al.addNewDependencies",
                    "when": "go-current.al.active && resourceFilename == gocurrent.json",
                    "group": "Go Current"
                }
            ]
        },
        "jsonValidation": [
            {
                "fileMatch": ".gocurrent/gocurrent.json",
                "url": "./syntaxes/projectFileSyntax.json"
            },
            {
                "fileMatch": "gocurrent.json",
                "url": "./syntaxes/projectFileSyntax.json"
            },
            {
                "fileMatch": ".gocurrent/data.json",
                "url": "./syntaxes/deploymentsSyntax.json"
            },
            {
                "fileMatch": ".gocurrent/arguments.json",
                "url": "./syntaxes/argumentSyntax.json"
            }
        ],
        "configuration": {
            "title": "Go Current Workspace",
            "properties": {
                "go-current-workspace.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable debug mode on activation (reload required)."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.48.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.27",
        "eslint": "^7.6.0",
        "@typescript-eslint/eslint-plugin": "^3.8.0",
        "@typescript-eslint/parser": "^3.8.0",
        "glob": "^7.1.6",
        "mocha": "^8.0.1",
        "typescript": "^4.0.0",
        "vscode-test": "^1.4.0"
    },
    "dependencies": {
        "node-powershell": "^4.0.0",
        "then-fs": "2.0",
        "uuid": "3.1.0"
    }
}
