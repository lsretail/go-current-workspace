{
    "title": "Go Current Deployment Data File Syntax",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for a Go Current Deploymnet Data File",
    "type": "object",
    "properties": {
        "deployments": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["guid", "id", "name"],
                "properties": {
                    "guid": {
                        "type": "string"
                    },
                    "instanceName": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "packages": {
                        "type": "array",
                        "description": "Packages in deployment group",
                        "items": {
                            "$ref": "./sharedDefinitions.json#definitions/packageList"
                        }
                    }
                }
            }
        }
    }
}