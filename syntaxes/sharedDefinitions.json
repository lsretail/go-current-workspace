{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "packageList": {
            "required": ["id", "version"],
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Specifies package id"
                },
                "version": {
                    "type": "string",
                    "description": "Specifies package version"
                },
                "optional": {
                    "type": "boolean",
                    "description": "Specifies whether optional or not"
                }
            }
        },
        "packageListRef": {
            "required": ["$ref"],
            "properties": {
                "$ref": {
                    "type": "string",
                    "description": "Reference to dependencies."
                }
            }
        },
        "versionQueryResolver": {
            "required": ["id", "version"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "resolverPath": {
                    "type": "string"
                },
                "resolverFunction": {
                    "type": "string"
                }
            }
        }
    }
}