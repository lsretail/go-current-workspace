{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "deploymentPackage": {
            "required": ["id", "version"],
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Specifies package id"
                },
                "version": {
                    "type": "string",
                    "description": "Specifies package version"
                },
                "optional": {
                    "type": "boolean",
                    "description": "Specifies whether optional or not"
                }
            }
        }
    }
}