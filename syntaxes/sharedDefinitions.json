{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "packageList": {
            "required": ["id", "version"],
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Specifies package id"
                },
                "version": {
                    "type": "string",
                    "description": "Specifies package version"
                },
                "optional": {
                    "type": "boolean",
                    "description": "Specifies whether optional or not"
                }
            }
        },
        "packageListRef": {
            "required": ["$ref"],
            "properties": {
                "$ref": {
                    "type": "string",
                    "description": "Reference to dependencies."
                }
            }
        },
        "versionQueryResolver": {
            "required": ["id", "version"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "resolverPath": {
                    "type": "string"
                },
                "resolverFunction": {
                    "type": "string"
                }
            }
        },
        "server": {
            "type": "object",
            "required": ["guid", "host", "port"],
            "description": "Specify a Go Current server.",
            "properties": {
                "guid": {
                    "type": "string",
                    "minLength": 1
                },
                "name": {
                    "type": "string",
                    "minLength": 1
                },
                "host": {
                    "type": "string",
                    "minLength": 1
                },
                "port": {
                    "type": "integer",
                    "default": 16550
                },
                "useSsl": {
                    "type": "boolean"
                },
                "identity": {
                    "type": "string",
                    "minLength": 1
                }
            }
        },
        "servers": {
            "type": "array",
            "description": "Specify Go Current servers to connect to.",
            "items": {
                "$ref": "#definitions/server"
            }
        }
    }
}